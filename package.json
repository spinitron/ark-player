    },
    "devDependencies": {
        "@babel/cli": "^7.12.7",
        "@babel/core": "^7.12.7",
        "@babel/preset-env": "^7.12.7",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^20.0.0",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "rollup": "^2.56.3",
        "sass": "^1.29.0"
    },
    "browserslist": [
        "last 1 version",
        "> 5%",
        "ie 11"
    ]
